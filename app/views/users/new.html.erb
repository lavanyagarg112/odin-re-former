<h1>New User</h1>

<%= form_with(model: @user, local: true, url: user_path,  method: :post) do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <div class="actions">
    <%= form.submit "Create User" %>
  </div>
<% end %>

